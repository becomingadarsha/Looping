#include<stdio.h>
int main()
{
	int i,j,k,l;
	for(i=1;i<=5;i++)  //for rows
	{
		for(j=i;j<5;j++) //for space
		{
			printf(" ");
		}
		for(k=1;k<=i;k++) //for half 1-5
		{
			printf("*");
		}
		for(j=i-1;j>=1;j--) //for half from 2nd line
        {
            printf("*");
        }
	
		printf("\n");
}
		return 0;
}




OUTPUT : 
     
      *
     **
     ***	
    *****
   *******
